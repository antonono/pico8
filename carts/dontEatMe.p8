pico-8 cartridge // http://www.pico-8.com
version 16
__lua__
p = {
	x=64,
	y=64,
	anim="fall",
	fall={f=0,st=0,sz=4,spd=2/5}
}

function controls()
	if (btn(0)) p.x -= 1
	if (btn(1)) p.x += 1
	if (btn(2)) p.y -= 1
	if (btn(3)) p.y += 1
end

function anim(a)
	a.f += a.spd
	if(a.f >= a.st + a.sz) then
		a.f = a.st
	end
	return flr(a.f)*2
end

function anim_player()
	if(p.anim == "fall") then
		return anim(p.fall)
	end
end

function _update()
	controls()
end

function _draw()
	cls()
	spr(anim_player(),p.x,p.y,2,2)
end
